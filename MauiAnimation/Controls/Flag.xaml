<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:mauiAnimation="clr-namespace:MauiAnimation"
             x:Class="MauiAnimation.Controls.Flag">
	<Grid RowDefinitions="150,150">
		<Path Fill="#0057B8"
				  TranslationY="50"
				  Stroke="#0057B8">
			<Path.Data>
				<RectangleGeometry Rect="0,0,400,100" />
			</Path.Data>
		</Path>
		<Path Fill="#0057B8"
			      x:Name="Blue1">
			<Path.Data>
				<RectangleGeometry Rect="0,0,400,100" />
			</Path.Data>
		</Path>
		<Path Fill="#0057B8"
			      x:Name="Blue2">
			<Path.Data>
				<RectangleGeometry Rect="0,0,400,100" />
			</Path.Data>
		</Path>

		<Path Fill="#FFD700" Grid.Row="1"
		      TranslationY="0">
			<Path.Data>
				<RectangleGeometry Rect="0,0,400,100" />
			</Path.Data>
		</Path>
		<Path Fill="#FFD700" Grid.Row="1"
				  TranslationY="50"
			      x:Name="Yellow1">
			<Path.Data>
				<RectangleGeometry Rect="0,0,400,100" />
			</Path.Data>
		</Path>
		<Path Fill="#FFD700" Grid.Row="1"
				  TranslationY="50"
			      x:Name="Yellow2">
			<Path.Data>
				<RectangleGeometry Rect="0,0,400,100" />
			</Path.Data>
		</Path>
	</Grid>
</ContentView>
