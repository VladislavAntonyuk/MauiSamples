<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBells.MainPage">

    <ContentPage.Resources>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="HorizontalTextAlignment" Value="Center"/>
        </Style>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

	        <Grid ColumnDefinitions="*,*,*,*,*,*,*">
		        <Label x:Name="year" Grid.Column="0" Text="2022"></Label>
		        <Label x:Name="month" Grid.Column="1" Text="12"></Label>
		        <Label x:Name="day" Grid.Column="2" Text="31"></Label>
		        <Label x:Name="hour" Grid.Column="4" Text="12"></Label>
		        <Label x:Name="minute" Grid.Column="5" Text="12"></Label>
		        <Label x:Name="second" Grid.Column="6" Text="12"></Label>
	        </Grid>

	        <Image 
                x:Name="bell"
                Source="bell.png"
                HeightRequest="200"
                HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

