<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maui="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             x:Class="MauiBarcode.ZxingCameraPage">


	<VerticalStackLayout>
		<maui:CameraView
	             x:Name="ZxingCameraView"
	             AutoStartPreview="True"
	             HeightRequest="300"
	             WidthRequest="300"
	             BarCodeDetectionEnabled="True"
	             ControlBarcodeResultDuplicate="True"/>
		<Button Text ="Start" Clicked="StartButton_OnClicked"></Button>
		<Button Text ="Stop" Clicked="StopButton_OnClicked"></Button>
	</VerticalStackLayout>

</ContentPage>
